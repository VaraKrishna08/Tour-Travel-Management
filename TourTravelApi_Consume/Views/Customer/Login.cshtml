@model TourTravelApi_Consume.Models.LoginModel
@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

@{
    ViewData["Title"] = "Customer Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>

    <div class="container">
        <div class="glass-container">
            <h3 class="mb-4">Log in</h3>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

            <form asp-action="Login" method="post">
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="Enter username" required>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" required>
                </div>

                <button type="submit" class="btn btn-login">Log in</button>
            </form>

           @*  <div class="mt-3">
                <a asp-action="ForgotPassword" class="text-white">Forgot password?</a>
            </div> *@

            <div class="mt-2">
                <span class="text-white">Don't have an account? </span>
                <a asp-action="Signup" class="text-white fw-bold">Sign up</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
